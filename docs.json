{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Lomadee Docs",
  "colors": {
    "primary": "#FF4712",
    "light": "#FF4712",
    "dark": "#FF4712"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": ["introduction", "quickstart", "development"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Pixel",
        "groups": [
          {
            "group": "Documentação",
            "pages": ["docs/pixel"]
          },
          {
            "group": "Implementações",
            "pages": ["docs/pixel/global", "docs/pixel/vtex", "docs/pixel/tray"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentação",
          "href": "https://docs.lomadee.com",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Suporte",
          "href": "https://suporte.lomadee.com",
          "icon": "circle-question"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "https://suporte.lomadee.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.lomadee.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/lomadee",
      "github": "https://github.com/lomadee",
      "linkedin": "https://linkedin.com/company/lomadee"
    }
  }
}
